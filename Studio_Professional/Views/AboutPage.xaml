<Page xmlns:my="using:Windows.UI.Xaml.Controls.Maps" 
    x:Class="Studio_Professional.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Studio_Professional.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White">

    <Grid>
        <ScrollViewer>
            <StackPanel 
				Orientation="Vertical">
                <Button
					x:Name="GoToBackButton"
                    Width="55"
                    Height="55"
                    Margin="0, 10, 0, 0"
                    BorderThickness="0"
                    Click="GoToBackButton_Click"
                    Style="{StaticResource ButtonTransperentBackground}">
                    <Button.Background>
                        <ImageBrush
                            ImageSource="ms-appx:///Resorses/Img/Common/Arrow.png"
                            Stretch="None"
                            AlignmentX="Center"
                            AlignmentY="Center"/>
                    </Button.Background>
                </Button>
                <Grid Margin="55, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Image
                        x:Name="Image1"
						Width="auto"
						Margin="0, 0, 10, 10"/>
                    <Image
                        x:Name="Image2"
						Grid.Column="1"
						Width="auto"
						Margin="10, 0, 0, 10"/>
                    <Image
                        x:Name="Image3"
						Grid.Row="1"
						Width="auto"
						Margin="0, 10, 10, 0"/>
                    <Image
                        x:Name="Image4"
						Grid.Row="1"
						Grid.Column="1"
						Width="auto"
						Margin="10, 10, 0, 0"/>
                </Grid>
                <TextBlock
                    x:Name="TextHeader"
					Text=""
					Foreground="Black"
					FontSize="35"
					TextAlignment="Center"
					Margin="0, 20" 
					FontFamily="Resources/Fonts/PT_Sans-Narrow-Web-Regular.ttf#PT Sans Narrow"/>
                <TextBlock
					x:Name="TextContent"
					Text=""
					Foreground="Black"
					FontSize="17"
					TextWrapping="WrapWholeWords"
					Margin="15, 5" 
					FontFamily="Resources/Fonts/PT_Sans-Narrow-Web-Regular.ttf#PT Sans Narrow"/>
                <TextBlock
					x:Name="TextContent2"
					Text=""
					Foreground="Black"
					FontSize="17"
					TextWrapping="WrapWholeWords"
					Margin="15, 5" 
					FontFamily="Resources/Fonts/PT_Sans-Narrow-Web-Regular.ttf#PT Sans Narrow"/>
                <Grid Margin="15, 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image 
                        x:Name="Image5"
						Width="auto"
						Margin="0, 0, 10, 0"/>
                    <Image
                        x:Name="Image6"
						Grid.Column="1"
						Width="auto" 
						Margin="10, 0, 0, 0"/>
                </Grid>
                <TextBlock
                    x:Name="AdressHeader"
					Text=""
					Foreground="Black"
					FontSize="35"
					TextAlignment="Center"
					Margin="0, 20" 
					FontFamily="Resources/Fonts/PT_Sans-Narrow-Web-Regular.ttf#PT Sans Narrow"/>
                <TextBlock
					x:Name="AddressText"
					Text=""
					Foreground="Black"
					FontSize="17"
					TextWrapping="WrapWholeWords"
					Margin="15, 5" 
					FontFamily="Resources/Fonts/PT_Sans-Narrow-Web-Regular.ttf#PT Sans Narrow"/>
                <TextBlock
                    x:Name="ContactHeader"
					Text=""
					Foreground="Black"
					FontSize="35"
					TextAlignment="Center"
					Margin="0, 20" 
					FontFamily="Resources/Fonts/PT_Sans-Narrow-Web-Regular.ttf#PT Sans Narrow"/>
                <TextBlock
					x:Name="ContactsText"
					Text=""
					Foreground="Black"
					FontSize="17"
					TextWrapping="WrapWholeWords"
					Margin="15, 5" 
					FontFamily="Resources/Fonts/PT_Sans-Narrow-Web-Regular.ttf#PT Sans Narrow"/>
                <TextBlock
                    x:Name="PhoneHeader"
					Text=""
					Foreground="Black"
					FontSize="35"
					TextAlignment="Center"
					Margin="15, 20" 
					FontFamily="Resources/Fonts/PT_Sans-Narrow-Web-Regular.ttf#PT Sans Narrow"/>
                <TextBlock
                    x:Name="PhoneText"
					Text=""
					Foreground="Black"
					FontSize="17"
					TextWrapping="WrapWholeWords"
					Margin="15, 5" 
					FontFamily="Resources/Fonts/PT_Sans-Narrow-Web-Regular.ttf#PT Sans Narrow"/>

                <Grid Margin="55, 0, 55, 35">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button
						x:Name="GoToVkButton"
						HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
						BorderThickness="0"
                        Width="50"
                        Height="50"
                        Style="{StaticResource ButtonTransperentBackground}">
                        <Button.Background>
                            <ImageBrush
                                ImageSource="ms-appx:///Resorses/Img/About/vk_icon.png"/>
                        </Button.Background>
                    </Button>
                    <Button
						x:Name="GoToFbButton"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
						BorderThickness="0"
                        Width="50"
                        Height="50"
                        Style="{StaticResource ButtonTransperentBackground}">
                        <Button.Background>
                            <ImageBrush
                                ImageSource="ms-appx:///Resorses/Img/About/fb_icon.png"/>
                        </Button.Background>
                    </Button>
                    <Button
						x:Name="GoToTwButton"
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
						BorderThickness="0"
                        Width="50"
                        Height="50"
                        Style="{StaticResource ButtonTransperentBackground}">
                        <Button.Background>
                            <ImageBrush
                                ImageSource="ms-appx:///Resorses/Img/About/tw_icon.png"/>
                        </Button.Background>
                    </Button>
                    <Button
						x:Name="GoToInstButton"
                        Grid.Column="3"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
						BorderThickness="0"
                        Width="50"
                        Height="50"
                        Style="{StaticResource ButtonTransperentBackground}">
                        <Button.Background>
                            <ImageBrush
                                ImageSource="ms-appx:///Resorses/Img/About/inst_icon.png"/>
                        </Button.Background>
                    </Button>
                </Grid>
                <my:MapControl x:Name="Map"
                               MapServiceToken="MyToken"
                               Height="300"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
